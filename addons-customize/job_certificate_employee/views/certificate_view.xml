<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_certificate_view" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.certificate.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="hr_certificate" string="Constancia de trabajo">
                    <group>
                        <group string="Certificado de trabajo">
                            <button string="Generar PDF" class="btn-primary" type="object" name="print_report"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
